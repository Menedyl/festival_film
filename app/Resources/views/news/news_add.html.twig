{% extends '::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/news_add.css') }}">
{% endblock %}

{% block body %}
    <div class="col-sm-8">

        {{ form_start(formNews) }}

        <fieldset>

            <legend>Ajout d'une actualit√©</legend>

            <div class="form-group">
                {{ form_label(formNews.title, 'Titre :' ,{'attr' : {'class' : 'control-label'}}) }}
                {{ form_errors(formNews.title) }}
                {{ form_widget(formNews.title, {'attr' : {'class' : 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(formNews.content, 'Contenu :' ,{'attr' : {'class' : 'control-label'}}) }}
                {{ form_errors(formNews.content) }}
                {{ form_widget(formNews.content, {'attr' : {'class' : 'form-control'}}) }}
            </div>

            {{ form_rest(formNews) }}

            <button type="submit" id="news_add_btn_valid" class="btn">Valider</button>


        </fieldset>

        {{ form_end(formNews) }}

    </div>



{% endblock %}