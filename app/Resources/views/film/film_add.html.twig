{% extends '::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/film_add.css') }}">
{% endblock %}

{% block body %}
    <div class="col-sm-8">

        {{ form_start(form) }}

        <fieldset>


            <legend>
                Ajouter un film
            </legend>

            <div class="form-group">
                {{ form_label(form.title, 'Titre du film :',
                {'label_attr' : {'class' : 'control-label'}}
                ) }}

                {{ form_errors(form.title) }}

                {{ form_widget(form.title,
                {'attr' : {'class' : 'form-control'}}
                ) }}
            </div>

            <div class="form-group">
                {{ form_label(form.description, 'Description du film :',
                {'label_attr' : {'class' : 'control-label'}}
                ) }}

                {{ form_errors(form.description) }}

                {{ form_widget(form.description,
                {'attr' : {'class' : 'form-control'}}
                ) }}
            </div>

            <div class="form-group">
                {{ form_label(form.diffusion, 'Horaire du film :',
                {'label_attr' : {'class' : 'control-label'}}
                ) }}

                {{ form_errors(form.diffusion) }}

                {{ form_widget(form.diffusion) }}
            </div>

            <button id="btn_valid" class="btn btn-primary">Valider</button>

            {{ form_rest(form) }}

        </fieldset>

        {{ form_end(form) }}
    </div>

{% endblock %}