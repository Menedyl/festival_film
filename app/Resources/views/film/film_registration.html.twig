{% extends '::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/film_registration.css') }}">
{% endblock %}

{% block body %}

    <div class="row">
        <div id="film_registration_film" class="col-sm-8">
            <h3 id="film_registration_film_title">{{ film.title }}</h3>

            <p>{{ film.description }}</p>

        </div>
    </div>

    <div id="film_registration_form" class="row">
        <div class="col-sm-8">

            {{ form_start(formRegistration) }}

            <fieldset>

                <legend id="film_registration_legend">Inscription</legend>

                <div class="col-sm-6">
                    <div class="form-group">
                        {{ form_label(formRegistration.name, 'Votre nom :', {'attr' : {'class' : 'control-label'}}) }}

                        {{ form_errors(formRegistration.name) }}

                        {{ form_widget(formRegistration.name, {'attr' : {'class' : 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(formRegistration.mail, 'Votre mail :', {'attr' : {'class' : 'control-label'}}) }}

                        {{ form_errors(formRegistration.mail) }}

                        {{ form_widget(formRegistration.mail, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                </div>

                <div class="col-sm-4">
                    <div id="film_registration_form_register" class="form-group">
                        {{ form_label(formRegistration.registration, 'Nombre de personnes :', {'attr' : {'class' : 'control-label'}}) }}

                        {{ form_errors(formRegistration.registration) }}

                        {{ form_widget(formRegistration.registration, {'attr' : {'class' : 'form-control'}}) }}
                    </div>
                </div>

                {{ form_rest(formRegistration) }}


                <div class="col-sm-10">

                    <button type="submit" id="film_registration_btn_valid" class="btn">Valider</button>

                </div>

            </fieldset>

            {{ form_end(formRegistration) }}
        </div>

    </div>

{% endblock %}
