{% extends '::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}

{% block body %}



    <div class="col-sm-5">

        {{ form_start(formLogin) }}

        <fieldset>


            <legend>Connexion</legend>

            <div class="form-group">

                {{ form_label(formLogin.name, 'Nom :', {'attr' : {'class' : 'control-label'}}) }}
                {{ form_widget(formLogin.name, {'attr' : {'class' : 'form-control'}}) }}
            </div>

            <div class="form-group">

                {{ form_label(formLogin.password, 'Mot de passe :', {'attr' : {'class' : 'control-label'}}) }}
                {{ form_widget(formLogin.password, {'attr' : {'class' : 'form-control'}}) }}
            </div>


            {{ form_rest(formLogin) }}

            <button type="submit" class="btn">Valider</button>


        </fieldset>

        {{ form_end(formLogin) }}

    </div>

{% endblock %}